{
    "name": "llm-shortcuts",
    "version": "1.0.0",
    "description": "A Chrome extension that enables developers and users to create reusable LLM prompt templates with predefined inputs.",
    "main": "index.js",
    "scripts": {
        "build": "node build.js",
        "dev": "node dev.js",
        "clean": "rm -rf dist",
        "package": "npm run clean && npm run build && zip -r llm-shortcuts.zip dist/ manifest.json",
        "install-deps": "npm install",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "keywords": [
        "chrome-extension",
        "llm",
        "ai",
        "prompts",
        "productivity"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/chrome": "^0.0.254",
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "chokidar": "^3.5.3",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^30.2.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.3.0"
    },
    "dependencies": {
        "@radix-ui/react-separator": "^1.1.7",
        "@radix-ui/react-slot": "^1.2.3",
        "@tailwindcss/typography": "^0.5.19",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.14",
        "tailwindcss-animate": "^1.0.7"
    }
}
