{
  "manifest_version": 3,
  "name": "LLM Shortcuts",
  "version": "1.0.0",
  "description": "A Chrome extension that enables developers and users to create reusable LLM prompt templates with predefined inputs.",
  "permissions": [
    "storage",
    "sidePanel",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open LLM Shortcuts"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "minimum_chrome_version": "138",
  "trial_tokens": [
    ""
  ]
}